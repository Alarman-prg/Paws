<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>

    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://api.fontshare.com/v2/css?f[]=clash-display@400,500,600,700&display=swap" rel="stylesheet">
</head>

<body>
    <!-- Heading/Search/Account/Cart -->
    <div class="heading">
        <p id="title"><a href="/home">Paw Prints</a></p>
        <form action="" method="get">
            <input type="search" name="" id="" placeholder="Search...">
        </form>
        <p><a href="/home">Home</a></p>
        <p><a href="/products">Products</a></p>
        <p><a href="/contact">Contact us</a></p>
        <p><a href="/cart">Cart</a></p>
    </div>

    <div class="body-container">
        <!-- Left Categories/Drilldowns -->
        <div class="drilldown">
            <!-- <p id="drilldown-title">Products</p> -->
            <a href="/products/all">
                <p>All</p>
            </a>
            <a href="/products/dog">
                <p>Dogs</p>
            </a>
            <a href="/products/cat">
                <p>Cats</p>
            </a>
            <a href="/products/bird">
                <p>Birds</p>
            </a>
            <a href="/products/reptile">
                <p>Reptiles</p>
            </a>
            <a href="/products/fish">
                <p>Fish</p>
            </a>
            <a href="/products/smallMammal">
                <p>Small mammals</p>
            </a>
        </div>

        <!-- Main body -->
        <div class="main-body">
            <p id="result-display">Showing results for </p>
            <div class="item-display-container">
                <% item.forEach(function(item) { %>
                    <div class="item">
                        <a href="/detail?item=<%= encodeURIComponent(JSON.stringify(item)) %>" class="item-name"><p>Item Name: <%= item.name %> </p></a>

                        <p class="item-price">Item Price:<%= item.price %></p>
                    </div>
                <% }); %>    
            </div>
            
        </div>
    </div>

    <!-- Footer/Copyright -->
    <div class="footer">
        <a href="/home">
            <p>Socials</p>
        </a>
        <a href="/admin">
            <p>Admin Pages</p>
        </a>
        <p id="copyright">Copyright @2024</p>
    </div>


</body>

</html>