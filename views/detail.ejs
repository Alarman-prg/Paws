<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detail</title>

    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://api.fontshare.com/v2/css?f[]=clash-display@400,500,600,700&display=swap" rel="stylesheet">
</head>

<body class="wallpaper">
    <!-- Heading/Search/Account/Cart -->
    <div class="heading">
        <p id="title"><a href="/home">Paw Prints</a></p>
        <form action="" method="get">
            <input type="search" name="" id="" placeholder="Search...">
        </form>
        <p><a href="/home">Home</a></p>
        <p><a href="/products">Products</a></p>
        <p><a href="/contact">Contact us</a></p>
        <p><a href="/cart">Cart</a></p>
        <p><a href="/login">Login</a></p>
        <p><a href="/logout">Log Out</a></p>
    </div>

    <div class="body-container">
        <!-- Left Categories/Drilldowns -->
        <!-- Left Categories/Drilldowns -->
        <div class="drilldown">
            <!-- <p id="drilldown-title">Products</p> -->
            <a href="/products/all">
                <p>All</p>
            </a>
            <a href="/products/dog">
                <p>Dogs</p>
            </a>
            <a href="/products/cat">
                <p>Cats</p>
            </a>
            <a href="/products/bird">
                <p>Birds</p>
            </a>
            <a href="/products/reptile">
                <p>Reptiles</p>
            </a>
            <a href="/products/fish">
                <p>Fish</p>
            </a>
            <a href="/products/smallMammal">
                <p>Small mammals</p>
            </a>
        </div>

        <!-- Main body -->
        <div class="main-body">
            <div class="detail-body">
                <div class="detail-sub-left">
                    <h1 id="item-detail-name">Product name: <%= item.name %>
                    </h1>
                    <img class="item-detail-thumbnail" src="<%= item.img_url %>" alt="item-detail-thumbnail">
                </div>
                <div class="detail-sub-right">



                    <p id="item-detail-desc">Description : <%= item.desc %>
                    </p>
                    <p id="item-detail-price">Price : $<%= item.price %>
                    </p>

                    <form action="/add" method="post">
                        <input type="hidden" name="productId" value="<%= item.uuid %>">
                        <label for="quantity">Quantity:</label>
                        <input type="number" id="quantity" name="quantity" min="1" value="1" required>
                        <button type="submit">Add to Cart</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <!-- Footer/Copyright -->
    <div class="footer">
        <a href="/home">
            <p>Socials</p>
        </a>
        <a href="/admin">
            <p>Admin Pages</p>
        </a>
        <p id="copyright">Copyright @2024</p>
    </div>

</body>

</html>